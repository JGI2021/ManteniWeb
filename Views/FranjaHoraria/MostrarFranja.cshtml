@using ManteniWeb.DatosTablas

@model ReposFranjaHoraria

@{
    ViewBag.Title = "Franja " + Model.NombreFranja;
}


<link href="~/Content/DataTables/datatables.min.css" rel="stylesheet" />
<link href="~/Content/DataTables/DataTables-1.12.1/css/dataTables.jqueryui.min.css" rel="stylesheet" />
<link href="~/css/Reprogramaciones.css" rel="stylesheet" />


@* Cabecera del formulario *@
<div class="jumbotron" style="padding:0px;margin-bottom:0px">
    <div class='container'>
        <h2 class='tituloGrande visible-lg visible-md' style="font-family: inherit;">
            <i class='fa fa-th' aria-hidden="true"></i>
            <span style='margin-left: 1em;'>@ViewBag.Title</span>
        </h2>
    </div>
</div>



<div class="container-fluid">
    <div class="row rowSeparacion25">
        @* MENU LATERAL *@
        <div class="col-lg-2 col-md-2 col-sm-2" style='text-align:left;' collapse width show" id="LeftPanel">
            <div class="visible-lg visible-md ">
                <ul id="VerticalPill_opciones" class="nav nav-pills nav-stacked VerticalPillMenuRegistro">
                    <li></li>
                    <li class="RowAccionesSiempreVisibles" style="">
                        <a href="#" role="button" id="OptionButtonVP_15" class="" onclick="RetrocederPaginaMVC();">
                            <div class="row">
                                <div class="col-lg-2 col-sm-2">
                                    <span class="fa fa-arrow-left visible-lg visible-md visible-xs" aria-hidden="true"></span>
                                </div>
                                <div class="col-lg-10 col-sm-10">Volver</div>
                            </div>
                        </a>
                    </li>
                    <li></li>
                </ul>
            </div>
        </div>

        @* AREA DE LAS FRANJAS *@
    <div class="col-md-8">
        @* Panel de errores *@
        <div id="alertaFranja" class="row rowSeparacion15 no-display">
            <div class=" col-md-offset-1 col-md-6">
                <div id="panelfranja" class="panel ">
                    <div class="panel-heading">
                        <span id="panelmensajefranja"></span>
                        <button type="button" class="close" data-target="#copyright-wrap" data-dismiss="alert">
                            <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                        </button>
                    </div>

                </div>
            </div>
        </div>




        @* Datos de la reprogramación *@
        <div class="row rowSeparacion10">

            <div class="col-md-4 form-group">
                <label for="ReprogNombre">Nombre franja <span class="red-text">*</span>  </label>
                <input type="text" class="form-control changeColor" id="fr-NombreFranja" value="@Model.NombreFranja" />
            </div>

            <div class="col-md-3 form-group">
                <label for="TotResNegativo">Resultados negativos por franja<span class="red-text"> *</span>  </label>
                <input type="number" class="form-control changeColor" id="fr-NumeroReintentos" min="0" value="@Model.NumeroReintentos" />
            </div>

            <input type="hidden" id="IdFranjaHoraria" value="@Model.IdRepositorio" />
        </div>

        <div>
            <h5 style="margin-right: 15px;display: inline-block"><strong>Detalles franja</strong></h5>
            <hr style="margin-top: 5px !important; margin-bottom: 15px;" />
        </div>

        <div id="TablaDetallesFranja">
            @Html.Partial("~/Views/FranjaHoraria/DetalleFranjaHoraria.cshtml", Model)
        </div>
    </div>
        @* Botonera *@
        <div id="botoneraGuardar" class="row rowSeparacion20 no-display margen-inferior-25 mr-15">
            <div class="col-sm-10">
                <div class="floatRight">
                    @if (Model.IdRepositorio != 0)
                    {
                        <div id="botonesActualizar">
                            <button type="button" class="btn btn-default botonFicha" id="BbotonAceptarF" onclick="GuardarDatos(0)">Guardar</button>
                            <button type="button" class="btn btn-default botonFicha" id="BbotonAceptarGS" onclick="GuardarDatos(1)">Guardar y salir</button>
                        </div>

                        <div id="botonAlta" style='display: none;'>
                            <button type="submit" class="btn btn-default botonFicha" id="BbotonAceptarF" onclick="AddFranja()">Guardar</button>
                        </div>
                    }
                    else
                    {
                        <div id="botonesActualizar" style='display: none;'>
                            <button type="button" class="btn btn-default botonFicha" id="BbotonAceptarF" onclick="GuardarDatos(0)">Guardar</button>
                            <button type="button" class="btn btn-default botonFicha" id="BbotonAceptarGS" onclick="GuardarDatos(1)">Guardar y salir</button>
                        </div>

                        <div id="botonAlta" >
                            <button type="submit" class="btn btn-default botonFicha" id="BbotonAceptarF" onclick="AddFranja()">Guardar</button>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>




@section scripts {

    <script src="~/js/FranjasHorarias.js" type="text/javascript"></script>

    <script>

        $(document).ready(function () {
            $(".changeColor").change(function () {
                id = this.id;
                $("#" + id).css("color", "blue");
                $("#botoneraGuardar").css("display", "block");
                GuardaDatoModificado(id);
            });
            // Guardo los datos que vienen en Model. La definicion en FranjasHorarias.js
            DatosFranja = @Html.Raw(Json.Encode(Model));
        });


    </script>
} 