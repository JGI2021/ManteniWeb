                            <div id="panelwarning-head" class="panel-heading"></div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
        <div class="col-lg-1 col-md-1">

        </div>
    </div>
</div>




@section scripts {
    <script>
        let maxNiveles = 0;
        $(document).ready(function () {
            let bhayerror = @hayError;
            maxNiveles = @Model.Count();
            console.log(('Arranca crear organizacion'));
            if (bhayerror) {
                const msgError = $('#msg-error').val();
                if ($('#panelwarning').hasClass('no-visible')) {
                    $('#panelwarning').removeClass('no-visible');
                    $('#panelwarning').addClass('panelwrn-visible');
                    $('#panelwarning-head').html("<h5><p>ERROR ----  " + msgError + "</p></h5>");
                }
            }
        });


        // -----------------------------------------------------
        // Se activa para eliminar o modificar el nivel.
        // Permite cambios sobre los datos del nivel
        // -----------------------------------------------------
        function ModificaDatosNivel(id, orden, accion) {

            // Ocultamos el árbol de nivel
            $('.tree-nivel').css('display', 'none');
            // Preparamos para mostrar el panel de modificación
            const nombreId = 'nombre-' + id;
            const descrId = 'descr-' + id;

            MostrarPanelDatosNivel(accion);

            const nombre = $('#' + nombreId).val();
            const descr = $('#' + descrId).val();

            if (accion === 'M') {
                $('#panel-title').html('Modificar datos nivel ' + nombre);
                $('#btn-guardar').text('Guardar');
                $('#btn-guardar').css('background', '#5bc0de');
            }
            else if (accion === 'B') {
                $('#panel-title').html('Eliminar el nivel ' + nombre + '?');
                $('#btn-guardar').text('Eliminar');
                $('#btn-guardar').css('background', '#f0ad4e');
            }

            $('#nombrenivel').val(nombre);
            $('#descripcionnivel').val(descr);
            $('#nivelvalue').val(orden);
            $('#orden').val(orden);
            $('#nivelvalue').prop('disabled', false);
            $('#idnivel').val(id);
            $('#accion').val(accion); // Modificación o baja
        }

        // Cierra el panel de modificación
        function CerrarPanel() {
            // Cierro el panel
            if ($('#panel-nivel').hasClass('panel-visible')) {
                $('#panel-nivel').removeClass('panel-visible');
                $('#panel-nivel').addClass('no-visible');
            }

            // muetro el panel de organización
            $('.tree-nivel').css('display', 'block');
        }

        // -----------------------------------------
        // Añade un nuevo nivel al árbol organizatvo
        // -----------------------------------------
        function AnadeNuevoNivel() {

            MostrarPanelDatosNivel('A');

            $('#btn-guardar').text('Añadir');
            $('#btn-guardar').css('background', '#0275d8');
            $('#panel-title').html('Nuevo nivel ');
            $('#nombrenivel').val('');
            $('#descripcionnivel').val('');
            $('#nivelvalue').val((maxNiveles - 1));
            $('#orden').val((maxNiveles - 1));
            $('#nivelvalue').prop('disabled', true);

            $('#idnivel').val('0');
            $('#accion').val('A'); // Alta de nivel
        }


        /// --------------------------------------
        //  Muestra el panel de datos de nivel
        /// --------------------------------------
        function MostrarPanelDatosNivel(accion) {
            // Ocultamos el árbol de nivel
            $('.tree-nivel').css('display', 'none');

            // Muestra el panel
            if ($('#panel-nivel').hasClass('no-visible')) {
                $('#panel-nivel').removeClass('no-visible');
                $('#panel-nivel').addClass('panel-visible');
            }

            if (accion === 'M' || accion === 'A') {
                if (accion === 'M') {
                    $('.panel-head').css('background', '#5bc0de');
                }
                else {
                    $('.panel-head').css('background', '#0275d8');
                }
                if ($('#panelwarning').hasClass('panelwrn-visible')) {
                    $('#panelwarning').removeClass('panelwrn-visible');
                    $('#panelwarning').addClass('no-visible');
                }
            }
            else if (accion == 'B') {
                $('.panel-head').css('background', '#f0ad4e');
                if ($('#panelwarning').hasClass('no-visible')) {
                    $('#panelwarning').removeClass('no-visible');
                    $('#panelwarning').addClass('panelwrn-visible');
                    $('#panelwarning-head').html("<h5>ATENCIÓN! Si elimina el nivel se eliminará todas las relaciones entre organiaciones y equipos desde ese nivel</h5>");
                }
            }
        }
    </script>
}

