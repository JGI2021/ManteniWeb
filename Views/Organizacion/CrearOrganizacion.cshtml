                                    <div class="form-group">
                                        <label for="nombrenivel">Nombre</label>
                                        <input type="text" class="form-control" required
                                               id="nombrenivel" name="nombrenivel" vaue=""
                                               maxlength="49" />
                                    </div>

                                    <div class="form-group">
                                        <label for="descripcionnivel">Descripción</label>
                                        <input type="text" class="form-control" required
                                               id="descripcionnivel" name="descripcionnivel" value=""
                                               maxlength="149" />
                                    </div>

                                    <div class="form-inline">
                                        @{
                                            string maxnivel = (Model.Count - 2).ToString();
                                        }
                                        <label for="nivelvalue">Nivel en organización  </label>
                                        <input type="number" class="form-control" required
                                               id="nivelvalue" value="" max="@maxnivel" min="1"
                                               maxlength="2" style="margin-left: 10px" />
                                        <input type="hidden" id="orden" name="orden" value="0" />
                                        <input type="hidden" id="idnivel" name="idnivel" value="" />
                                        <input type="hidden" id="accion" name="accion" value="" />
                                    </div>


                                    <div class="margen-top-20 text-right">
                                        <button type="submit" id="btn-guardar" class="btn btn-info">Guardar</button>
