            <div class="visible-lg visible-md ">
                <ul id="VerticalPill_opciones" class="nav nav-pills nav-stacked VerticalPillMenuRegistro">
                    <li></li>
                    <li class="RowAccionesSiempreVisibles" style="">
                        <a href="#" role="button" id="OptionButtonVP_15" class="" onclick="RetrocederPaginaMVC();">
                            <div class="row">
                                <div class="col-lg-2 col-sm-1">
                                    <span class="fa fa-arrow-left visible-lg visible-md visible-xs" aria-hidden="true"></span>
                                </div>
                                <div class="col-lg-10 col-sm-11">Volver</div>
                            </div>
                        </a>
                    </li>
                    <li></li>
                </ul>
            </div>
        </div>

        @* Panel central donde se muestra la tabla con los equipos*@
        <div class="col-lg-10 col-md-10">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <div class="row alinea-boton">
                        <button type="button" class="btn btn-default botonFicha" onclick="AnadeNuevoNivel()"><b>Nuevo nivel</b> </button>
                    </div>

                    <ul class="responsive-table">
                        <li class="table-header" disabled>
                            <div class="col col-1">Nivel</div>
                            <div class="col col-2">Nombre nivel</div>
                            <div class="col col-3">Descripción</div>
                            <div class="col col-4">Acción</div>
                        </li>
                        @foreach (NivelesOrganizacion nivel in Model)
                        {
                            <li class="table-row">
                                <div class='col col-1'>@nivel.Orden</div>
                                <div class='col col-2'>
                                    <input type="text" class="input-no-activo" id="nombre-@nivel.IdNivelOrganizacion" value="@nivel.Nombre" />
                                </div>
                                <div class='col col-3'>
                                    <input type="text" class="input-no-activo" id="descr-@nivel.IdNivelOrganizacion" value="@nivel.Descripcion" />
                                </div>
                                <div class='col col-4'>
                                    @if (nivel.TablaTiphone != "EQUIPO" && nivel.TablaTiphone != "OP_TABLE")
                                    {
