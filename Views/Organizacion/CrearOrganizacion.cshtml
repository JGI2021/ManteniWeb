                    <div class="row">
                        <div class="tree-nivel">
                            @Html.Raw(Display())
                        </div>

                        <div class="panel no-visible" id="panel-nivel">
                            <div class="panel-heading  panel-head">
                                <a data-toggle="collapse" href="#test" class="close">&times;</a>
                                <h2 class="panel-head" id="panel-title"></h2>
                            </div>
                            <div class="panel-body" id="panel-body">
