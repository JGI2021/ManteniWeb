@model  List<NivelesOrganizacion>

@using ManteniWeb.Models;


@{
    ViewBag.Title = "Niveles de Organización";
    string msgError = (string)ViewBag.MsgError;
    int hayError = 0;
    if (msgError != "")
    {
        hayError = 1;
    }
}

<link href="~/Content/bootstrap-select.min.css" rel="stylesheet" />


<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

<link href="~/css/MyTreeView.css" rel="stylesheet" />

<link href="~/css/Organizacion.css" rel="stylesheet" />


@functions{

    public string DisplaySubOrganizaciones(List<NivelesOrganizacion> niveles, int i)
    {
        string s = "";

        NivelesOrganizacion nivel = niveles[i];
        s += "<ul>";
        //        i++;
        string color = "ColorNormal";

        try
        {
            if (nivel.TablaTiphone != "ASESORES")
            {
                s += "<li>";

                s += "<span class='tree-nivel-padre " + color + "'>";
                //          s += "<i class='glyphicon glyphicon-menu-down' ></i>";
                s += nivel.Nombre;
                s += "<label id='nivel'" + nivel.IdNivelOrganizacion + "' class='colorBlue-nivel'>( Nivel " + nivel.Orden.ToString() + " )</label> ";
                s += "</span> ";
            }
            else
            {
                s += "<li style='display:none;'><span class='tree-nivel-hoja node-item " + color + "'> " + nivel.Nombre + " </span>  ";
            }

            i++;
            if (i < niveles.Count)
            {
                s += DisplaySubOrganizaciones(niveles, i);
            }
            s += "  </li>";
            s += "</ul>";
        }

        catch (Exception ex)
        {
            s += "Grossen peten " + ex.Message;
        }


        return s;
    }


    public string Display()
    {
        var niveles = (List<NivelesOrganizacion>)Model;
        if (niveles == null || niveles.Count == 0)
            return "";

        var nivel = niveles[0];
        string s = "<ul>";
        string color = "ColorNormal";

        s += "<li>";

        s += "<span class='tree-nivel-padre " + color + "'>";
        //        s += "<i class='glyphicon glyphicon-menu-down'></i>";
        s += nivel.Nombre;
        s += "<label class='colorBlue-nivel'>( Nivel " + nivel.Orden.ToString() + " )</label> ";
        s += "</span> ";

        //int i = 0;
        try
        {
            if (niveles.Count > 1)
            {
                s += DisplaySubOrganizaciones(niveles, 1);
            }
            s += "</li>";
            s += "</ul>";


        }
        catch (Exception ex)
        {

            s += "Peten " + ex.Message;
        }


        return s;
    }
}





