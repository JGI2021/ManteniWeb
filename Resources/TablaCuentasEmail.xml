<table>

<general
 	DisplayName="Cuentas de e-mail" 
 	Database="TIPHONE"
 	TableName="CUENTAS_EMAIL">
</general>

<panels>
<panel
	id="panelgenerales"
  DisplayName="Datos Generales">
</panel>
</panels>

    
<fields>

  <field>
  <fattr 
	  FieldName="id_cuenta" 
	  Panel="panelgenerales"
	  DisplayName="Identificador" 
	  IsKey="true"
	  ReadOnly="true"
	  EditionType="AUTOGENERATEDINT" 
	  Mandatory="true" 
	  ValidateAs="Integer"
	  ToolTip="Identificador de la cuenta."
	  External="false"
	  TabOrder="1">
  </fattr>		
  </field>

  <field>
  <fattr 
	  FieldName="id_servidor" 
	  Panel="panelgenerales"
	  DisplayName="Servidor" 
	  EditionType="combo"	
	  Mandatory="true" 
	  ValidateAs="integer"
	  ToolTip="Seleccione el servidor."
	  External="true"
    UpdateNeeded="true"
    Linea="LServidorGrupo"
	  TabOrder="2">
  </fattr>
    <external>
      <type tipo="table"/>
      <table
        DatabaseName="TIPHONE"
        TableName="EMAIL_SERVIDORES"
        FieldKey="id_servidor"
	      FieldValue="descripcion"
	      FilterSubsistema="false"
        DefaultKey="NULL"
        DefaultValue="Seleccionar..."
        >
      </table>
    </external>
  </field>

  <field>
    <fattr
      FieldName="id_grupo_acd"
      Panel="panelgenerales"
      DisplayName="Grupo ACD"
      EditionType="Combo"
      Mandatory="true"
      ValidateAs="Integer"
      Linea="LServidorGrupo"
      ToolTip="Grupo ACD"
      UpdateNeeded="true"
      External="true"
      TabOrder="5">
    </fattr>
    <external>
      <type tipo="table"/>
      <table
        DatabaseName="TIPHONE"
        TableName="GRUPO_ACD"
        FieldKey="GRUPO_ACD_ID"
        FieldValue="ALIAS"
        DefaultKey="NULL"
        DefaultValue="Ninguno"
        FilterValuesTable="es_de_distribucion:0,0:int;"
        FilterSubsistema="true"
			  CampoSubsistema="subsistema"
      >
      </table>
    </external>
  </field>

  <field>
    <fattr
      FieldName="cuenta"
      Panel="panelgenerales"
      DisplayName="Cuenta "
      EditionType="Edit"
      MaxLen="100"
      Mandatory="true"
      ValidateAs="Alpha"
      ToolTip="Teclee la cuenta."
      External="false"
      Linea="cuenta"
      UpdateNeeded="true"
      TabOrder="3">
    </fattr>
  </field>

  <field>
    <fattr
      FieldName="activa"
      Panel="panelgenerales"
      DisplayName="Activa"
      EditionType="check"
      Mandatory="false"
      ValidateAs="boolean"
      ToolTip="Marque si desea que la cuenta esté activa"
      External="false"
      Linea="cuenta"
      UpdateNeeded="true"
      TabOrder="8">
    </fattr>
  </field>

  <field>
  <fattr 
	  FieldName="clave" 
	  Panel="panelgenerales"
	  DisplayName="Clave " 
	  EditionType="password"	
	  MaxLen="100"
	  Mandatory="true" 
	  ValidateAs="Alpha"
	  ToolTip="Teclee la password."
	  External="false"
    UpdateNeeded="true"
	  TabOrder="4">
  </fattr>		
  </field>


  <field>
    <fattr
      FieldName="flag_resp_automatica"
      Panel="panelgenerales"
      DisplayName="¿Establecer respuesta automática?"
      EditionType="check"
      Mandatory="false"
      ValidateAs="Boolean"
      ToolTip="Marque si desea establecer una respuesta automática"
      External="false"
      UpdateNeeded="true"
      Linea="RespAutomatica"
      TabOrder="6">
    </fattr>
  </field>

  <field>
    <fattr
      FieldName="MY_TEMPLATE_ID"
      Panel="panelgenerales"
      DisplayName="Plantilla para la respuesta automática"
      EditionType="combo"
      Mandatory="true"
      ValidateAs="integer"
      ToolTip="Seleccione la plantilla a utilizar para el envío de la respuesta automática."
      External="true"
      dependencies="true"
      UpdateNeeded="true"
      Visible="true"
      Linea="RespAutomatica"
      TabOrder="7">
    </fattr>
    <external>
      <type tipo="table"/>
      <table
        DatabaseName="TIPHONE"
        TableName="MY_TEMPLATE"
        FieldKey="MY_TEMPLATE_ID"
	      FieldValue="NOMBRE"
	      FilterSubsistema="false"
        DefaultKey="NULL"
        DefaultValue="Seleccionar...">
      </table>
    </external>
    <dependencies>
      <dependencie
        FieldDependency="flag_resp_automatica"
        ValueDependency="true"
        Visible="true"
        Mandatory="true">
      </dependencie>
      <dependencie
        FieldDependency="flag_resp_automatica"
        ValueDependency="false"
        Visible="false"
        Mandatory="false">
      </dependencie>
    </dependencies>
  </field>
 
  
</fields>
  
</table>
