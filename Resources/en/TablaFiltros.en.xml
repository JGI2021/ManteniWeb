<table>

	<general
		DisplayName="Campaign filters"
		Database="TIPHONE"
		TableName="FILTRO"
	  RelationType="1-N"
>
	</general>


	<panels>
		<panel
			id="panelgenerales"
		  DisplayName="General data">
		</panel>
	</panels>

	<Lineas>
		<linea
		  name="horas"
		  CheckNull="false"
		  SliderTime="true">
		</linea>
	</Lineas>

	<fields>
		<field>
			<fattr
				FieldName="filtro_id"
				Panel="panelgenerales"
				DisplayName="ID"
				IsKey="true"
				ReadOnly="true"
				EditionType="AUTOGENERATEDINT"
				Mandatory="true"
				ValidateAs="Integer"
				ToolTip="Filter Id"
				External="false"
				PosColumna="4"
				Linea="primero"
				TabOrder="1">
			</fattr>
		</field>

		<field>
			<fattr
				FieldName="alias"
				Panel="panelgenerales"
				DisplayName="Alias"
				EditionType="Edit"
				MaxLen="15"
				Mandatory="true"
				ValidateAs="Alpha"
				ToolTip="Filter alias"
				External="false"
				PanelInfo="true"
				PosColumna="8"
				Linea="primero"
			  UpdateNeeded="true"
				TabOrder="2">
			</fattr>
		</field>

		<field>
			<fattr
			  FieldName="activo"
			  Panel="panelgenerales"
			  DisplayName="Enabled"
			  EditionType="check"
			  Mandatory="false"
			  ValidateAs="Alpha"
			  ToolTip="Filter Enabled"
			  External="true"
			  UpdateNeeded="true"
			  DefaultValue="PD"
			  PanelInfo="true"
			  PosColumna="2"
			  Linea="Fila1"
			  TabOrder="15">
			</fattr>
			<external>
				<type tipo="collection"/>
				<collection>
					<collectionitem
					   key="true"
					   value="Y">
					</collectionitem>
					<collectionitem
					   key="false"
					   value="N">
					</collectionitem>
				</collection>
			</external>
		</field>

		<field>
			<fattr
				FieldName="descripcion"
				Panel="panelgenerales"
				DisplayName="Description"
				EditionType="Edit"
				MaxLen="50"
				Mandatory="true"
				ValidateAs="Alpha"
				ToolTip="Filter description"
				External="false"
				PanelInfo="true"
			    UpdateNeeded="true"
				TabOrder="3">
			</fattr>
		</field>

		<field>
			<fattr
				FieldName="fechahora_inicio"
				Panel="panelgenerales"
				DisplayName="Start time"
				EditionType="time"
				Mandatory="true"
				ValidateAs="datetime"
				ToolTip="Filter start time"
				External="false"
				PanelInfo="true"
				UpdateNeeded="true"
				DefaultValue="19000101 00:00:00"
			  Linea="horas"
				TabOrder="4">
			</fattr>
		</field>

		<field>
			<fattr
				FieldName="fechahora_fin"
				Panel="panelgenerales"
				DisplayName="End time "
				EditionType="time"
				Mandatory="true"
				ValidateAs="datetime"
				ToolTip="Filter end time"
				External="false"
				PanelInfo="true"
				UpdateNeeded="true"
			    DefaultValue="NULL"
			    Linea="horas"
				TabOrder="5">
			</fattr>

		</field>


		<field>
			<fattr
			  FieldName="campana_id"
			  Panel="panelgenerales"
			  DisplayName="Campaign Id"
			  EditionType="Copia_alta"
			  Mandatory="true"
			  ReadOnly="true"
			  ValidateAs="Integer"
			  ToolTip="Campaign Id"
			  External="false"
			  UpdateNeeded="false"
			  MaxLen="50"
			  TabOrder="6">
			</fattr>
		</field>

		<field>
			<fattr
			  FieldName="condicion_id"
			  Panel="panelgenerales"
			  DisplayName="Condition"
			  EditionType="combo"
			  Mandatory="true"
			  ValidateAs="integer"
			  ToolTip="Filter condition"
			  External="true"
			  UpdateNeeded="true"
			  Linea="COND"
			  PanelInfo="true"
			  PosColumna="6"
			  TabOrder="7">
			</fattr>
			<external>
				<type tipo="table"/>
				<table
				  DatabaseName="TIPHONE"
				  DBDot=".."
				  TableName="condicion"
				  FieldKey="condicion_id"
					FieldValue="alias"
					FilterSubsistema="true"
					CampoSubsistema="subsistema"
				  DefaultKey="NULL"
				  DefaultValue="None"
				  OrderBy="Alias">
				</table>
			</external>
		</field>


		<field>
			<fattr
			  FieldName="temporal"
			  Panel="panelgenerales"
			  DisplayName="Temporary"
			  Visible="false"
			  EditionType="Edit"
			  Mandatory="false"
			  ValidateAs="Alpha"
			  ToolTip="Temporary"
			  UpdateNeeded="false"
			  DefaultValue="N"
			  Linea="Check"
			  TabOrder="15">
			</fattr>
		</field>


	</fields>
</table>
