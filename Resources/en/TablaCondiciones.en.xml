<table>

	<general
		DisplayName="Conditions"
		Database="TIPHONE"
		SubsystemFieldName="subsistema"
		TableName="CONDICION">
	</general>

	<panels>
		<panel
			id="panelgenerales"
		  DisplayName="General Data">
		</panel>

	</panels>

	<fields>

		<field>
			<fattr
				FieldName="condicion_id"
				Panel="panelgenerales"
				DisplayName="Id"
				IsKey="true"
				ReadOnly="true"
				EditionType="AUTOGENERATEDINT"
				Mandatory="true"
				ValidateAs="Integer"
				ToolTip="Condition Id"
				External="false"
				TabOrder="1">
			</fattr>
		</field>

		<field>
			<fattr
				FieldName="alias"
				Panel="panelgenerales"
				DisplayName="Alias"
				EditionType="Edit"
				MaxLen="15"
				Mandatory="true"
				ValidateAs="Alpha"
				ToolTip="Condition Alias is required"
				External="false"
			  UpdateNeeded="true"
			  PanelInfo="true"
				TabOrder="2">
			</fattr>

		</field>

		<field>
			<fattr
				FieldName="descripcion"
				Panel="panelgenerales"
				DisplayName="Description"
	 
				EditionType="Edit"
				MaxLen="50"
				Mandatory="true"
				ValidateAs="Alpha"
				ToolTip="Description"
			  PanelInfo="true"
				External="false"
			  UpdateNeeded="true"
				TabOrder="3">
			</fattr>
		</field>

		<field>
			<fattr
			  FieldName="condicion"
			  Panel="panelgenerales"
			  DisplayName="Condition"
			  EditionType="Edit"
			  MaxLen="250"
			  Mandatory="true"
			  ValidateAs="Alpha"
			  ToolTip="Write condition"
			  External="false"
			  PanelInfo="true"
			  UpdateNeeded="true"
			  TabOrder="3">
			</fattr>
		</field>

	</fields>
</table>
