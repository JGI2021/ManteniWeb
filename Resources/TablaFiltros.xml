<table>

	<general
		DisplayName="Listas de la campaña"
		Database="TIPHONE"
		TableName="FILTRO"
	  RelationType="1-N"
>
	</general>


	<panels>
		<panel
			id="panelgenerales"
		  DisplayName="Datos Generales">
		</panel>
	</panels>

  <Lineas>
    <linea
      name="horas"
      CheckNull="false"
      SliderTime="true">
    </linea>
  </Lineas>
  
<fields>
<field>
<fattr 
	FieldName="filtro_id" 
	Panel="panelgenerales"
	DisplayName="Identificador" 
	IsKey="true"
	ReadOnly="true"
	EditionType="AUTOGENERATEDINT" 
	Mandatory="true" 
	ValidateAs="Integer"
	ToolTip="Identificador del filtro."
	External="false"
	PosColumna="4"
	Linea="primero"
	TabOrder="1">
</fattr>		
</field>

<field>
<fattr 
	FieldName="alias" 
	Panel="panelgenerales"
	DisplayName="Alias"  
	EditionType="Edit"	
	MaxLen="15"
	Mandatory="true" 
	ValidateAs="Alpha"
	ToolTip="Teclee un Alias para este filtro."
	External="false"
	PanelInfo="true"
	PosColumna="8"
	Linea="primero"
  UpdateNeeded="true"
	TabOrder="2">
</fattr>		
</field>

		<field>
			<fattr
			  FieldName="activo"
			  Panel="panelgenerales"
			  DisplayName="Activo"
			  EditionType="check"
			  Mandatory="false"
			  ValidateAs="Alpha"
			  ToolTip="Lista de campaña activa."
			  External="true"
			  UpdateNeeded="true"
			  DefaultValue="PD"
			  PanelInfo="true"
			  PosColumna="2"
			  Linea="Fila1"
			  TabOrder="15">
			</fattr>
			<external>
				<type tipo="collection"/>
				<collection>
					<collectionitem
					   key="true"
					   value="S">
					</collectionitem>
					<collectionitem
					   key="false"
					   value="N">
					</collectionitem>
				</collection>
			</external>
		</field>

		<field>
			<fattr
				FieldName="descripcion"
				Panel="panelgenerales"
				DisplayName="Descripción"
				EditionType="Edit"
				MaxLen="50"
				Mandatory="true"
				ValidateAs="Alpha"
				ToolTip="Introduzca un texto que describa el filtro."
				External="false"
				PanelInfo="true"
			    UpdateNeeded="true"
				TabOrder="3">
			</fattr>
		</field>


  
<field>
<fattr 
	FieldName="fechahora_inicio" 
	Panel="panelgenerales"
	DisplayName="Fecha/hora" 
	EditionType="time" 
	Mandatory="true" 
	ValidateAs="datetime"
	ToolTip="Fecha y hora de inicio."
	External="false"
	PanelInfo="true"  
	UpdateNeeded="true"
    DefaultValue="19000101 00:00:00"
  Linea="horas"
	TabOrder="4">
</fattr>
 
</field>

		<field>
			<fattr
				FieldName="fechahora_fin"
				Panel="panelgenerales"
				DisplayName="Hora fin "
				EditionType="time"
				Mandatory="true"
				ValidateAs="datetime"
				ToolTip="Hora de fin."
				External="false"
				PanelInfo="true"
				UpdateNeeded="true"
			    DefaultValue="NULL"
			    Linea="horas"
				TabOrder="5">
			</fattr>

		</field>


		<field>
			<fattr
			  FieldName="campana_id"
			  Panel="panelgenerales"
			  DisplayName="Id de Campaña"
			  EditionType="Copia_alta"
			  Mandatory="true"
			  ReadOnly="true"
			  ValidateAs="Integer"
			  ToolTip="Campaña Id"
			  External="false"
			  UpdateNeeded="false"
			  MaxLen="50"
			  TabOrder="6">
			</fattr>
		</field>

		<field>
			<fattr
			  FieldName="condicion_id"
			  Panel="panelgenerales"
			  DisplayName="Condición"
			  EditionType="combo"
			  Mandatory="true"
			  ValidateAs="integer"
			  ToolTip="Condición"
			  External="true"
			  UpdateNeeded="true"
			  Linea="COND"
			  PanelInfo="true"
			  PosColumna="6"
			  TabOrder="7">
			</fattr>
			<external>
				<type tipo="table"/>
				<table
				  DatabaseName="TIPHONE"
				  DBDot=".."
				  TableName="condicion"
				  FieldKey="condicion_id"
					FieldValue="alias"
					FilterSubsistema="true"
					CampoSubsistema="subsistema"
				  DefaultKey="NULL"
				  DefaultValue="Ninguna seleccionada"
				  OrderBy="Alias">
				</table>
			</external>
		</field>


		<field>
			<fattr
			  FieldName="temporal"
			  Panel="panelgenerales"
			  DisplayName="Temporal"
			  Visible="false"
			  EditionType="Edit"
			  Mandatory="false"
			  ValidateAs="Alpha"
			  ToolTip="Es temporal."
			  UpdateNeeded="false"
			  DefaultValue="N"
			  Linea="Check"
			  TabOrder="15">
			</fattr>
		</field>


	</fields>
</table>
